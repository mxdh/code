{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++.exe build active file",
            "command": "C:\\Compiler\\MinGW\\bin\\g++.exe",
            "args": [
                "-g",
                "${relativeFile}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-std=c++98",
                "-Wall",
                "-Wextra",
                "-Wpedantic",
                "'-Wl,--stack=123456789'"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": "$gcc"
        },
        {
            "type": "shell",
            "label": "g++asm",
            "command": "C:\\Compiler\\MinGW\\bin\\g++.exe",
            "args": [
                "-g",
                "${relativeFile}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.S",
                "-std=c++98",
                "-Wall",
                "-Wextra",
                "-Wpedantic",
                "-S"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": "$gcc"
        },
        {
            "type": "shell",
            "label": "clang++.exe build active file",
            "command": "C:\\Compiler\\LLVM\\bin\\clang++.exe",
            "args": [
                "-target x86_64-pc-windows-gnu",
                "-g",
                "${relativeFile}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-std=c++98",
                "-Wall",
                "-Wextra",
                "-Wpedantic"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": {
                "base": "$gcc",
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error|note):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "type": "shell",
            "label": "clang++asm",
            "command": "C:\\Compiler\\LLVM\\bin\\clang++.exe",
            "args": [
                "-target x86_64-pc-windows-gnu",
                "-g",
                "${relativeFile}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-std=c++98",
                "-Wall",
                "-Wextra",
                "-Wpedantic",
                "-S"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": {
                "base": "$gcc",
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error|note):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        }
    ]
}