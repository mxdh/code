{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "MinGW 编译(调试)",
            "windows": {
                "command": "C:/Compiler/MinGW/bin/g++.exe"
            },
            "args": [
                "${relativeFile}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe",
                "-g",
                "-Wall",
                "-Wextra",
                "-Wpedantic",
                "-Wl,--stack=123456789"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": "$gcc"
        },
        {
            "type": "shell",
            "label": "MinGW 编译(发布)",
            "windows": {
                "command": "C:/Compiler/MinGW/bin/g++.exe"
            },
            "args": [
                "${relativeFile}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe",
                "-Wall",
                "-Wextra",
                "-Wpedantic",
                "-Wl,--stack=123456789"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": "$gcc"
        },
        {
            "type": "shell",
            "label": "Clang 编译(调试)",
            "windows": {
                "command": "C:/Compiler/LLVM/bin/clang++.exe"
            },
            "args": [
                "${relativeFile}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe",
                "-g",
                "-Wall",
                "-Wextra",
                "-Wpedantic"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": {
                "base": "$gcc",
                "pattern": [
                    {
                        "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "severity": 4,
                        "message": 5
                    },
                    {
                        "regexp": "^\\s+(.*)$",
                        "message": 1,
                        "loop": true
                    }
                ]
            }
        }
    ]
}